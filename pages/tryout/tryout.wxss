/* pages/product/product.wxss */
.top{
    width: 100%;
    height: 18rem;
    position: relative;
}
.text{
    font-size: 1rem;
    left: 8rem;
    top: 2rem;
    color: #FFFFFF;
    position: absolute;
}
.middle{
    width: 18rem;
    margin: auto;
    
}
.content{
    font-size: 1rem;
    margin-left: 7rem;
    color: black;
    display: flex;
}


.from{
    width: 18rem;
    height: 10rem;
    margin: auto;
    margin-top: 1rem;
}
.box{
    width: 15rem;
    height: 1rem;
    border: .01rem solid #006fff;
    margin: auto;
    font-size: .8rem;
    margin-bottom: 1rem;
    text-align: center;
     
}

.but{
    width: 15rem;
    height: 2rem;
    font-size: 0.8rem;
    background-color: #006fff;
    color: white;

}
.introduce{
    font-size: 0.75rem;
    color: gray;
    margin-top: 1rem;
    text-indent: 2rem;
    text-align: left;
}
.photo{
    width: 5rem;
    height: 5rem;
    margin-left: 7rem;
    margin-top: 1rem;
}
.nav{
    width: 15rem;
    height: 2rem;
    margin: auto;
    margin-top: 1rem;
}
ul{
    width: 15rem;
    height: 2rem;
    display: flex;
    justify-content: space-between;
}
li{
    width: 6rem;
    height: 2rem;
    border: .06rem solid #006fff;
    font-size: 0.88rem;
    line-height: 2rem;
    text-align: center;
    color: #006fff;
}
li:nth-child(1):hover{
    background-color: #006fff;
    color: #91c1ff;
}
li:nth-child(2):hover{
    background-color: #006fff;
    color: #91c1ff;
}
