<!-- pages/particulars/particulars.wxml -->

<web-view wx:if="{{newsDetail.urlType==1}}" src="http://www.baidu.com"></web-view>
<view wx:else>
    <view class="top">
        <text class="text">Face Job</text>
    </view>
    <view class="article">
        <text class="title">{{newsDetail.title}}</text>
        <text class="author">作者：{{newsDetail.author}}</text>
        <text class="time">时间：{{newsDetail.create_date}}</text>
    </view>
    <image src="{{newsDetail.coverImgPath}}" />
    <view class="article">
        <text class="content">
          {{newsDetail.context}}
        </text>
    </view>
</view>
